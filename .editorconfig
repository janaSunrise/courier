# https://editorconfig.org
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Rust files
[*.rs]
indent_size = 4

# TOML files (Cargo.toml, etc.)
[*.toml]
indent_size = 4

# Markdown files
[*.md]
trim_trailing_whitespace = false